<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Refresh"
            android:id="@+id/refresh" android:layout_gravity="left|center_vertical"
            android:background="@drawable/sync"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
      <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Title"
                android:id="@+id/SongTitle" android:textSize="30dp"/>
      <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Artist"
                android:id="@+id/artist" android:layout_gravity="left|center_vertical" android:textSize="20dp"/>
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="70dp">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="back"
                android:id="@+id/back" android:layout_gravity="center_horizontal|top"
                android:background="@drawable/button_previous"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="pause"
                android:id="@+id/pause" android:layout_gravity="center_horizontal|top"
                android:background="@drawable/button_pause"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="stop"
                android:id="@+id/stop" android:layout_gravity="center_horizontal|top"
                android:background="@drawable/button_stop"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="next"
                android:id="@+id/next" android:layout_gravity="center_horizontal|top"
                android:background="@drawable/button_next"/>
    </LinearLayout>
  <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView" android:layout_gravity="center" android:fillViewport="false">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/playlistView">
        </LinearLayout>
    </ScrollView>
</LinearLayout>